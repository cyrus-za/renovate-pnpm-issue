{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "rangeStrategy": "replace",
  "compatibility": { "pnpm": "^5.0.0" },
  "recreateClosed": true,
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "packagePatterns": ["eslint"],
      "labels": ["linting"]
    }
  ]
}
